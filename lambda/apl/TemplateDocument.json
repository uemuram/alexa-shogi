{
    "type": "APL",
    "version": "1.6",
    "settings": {},
    "theme": "dark",
    "import": [],
    "resources": [],
    "styles": {},
    "onMount": [],
    "graphics": {},
    "commands": {},
    "layouts": {},
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Container",
                "width": "100%",
                "height": "100%",
                "paddingTop": "100dp",
                "items": [
                    {
                        "type": "Frame",
                        "id": "frame1",
                        "height": "25vh",
                        "item": {
                            "type": "Text",
                            "id": "speechText2",
                            "paddingTop": "10",
                            "paddingRight": "20",
                            "text": "アニメーションテスト",
                            "fontSize": "5vw"
                        },
                        "borderColor": "white",
                        "borderWidth": "1"
                    },
                    {
                        "type": "TouchWrapper",
                        "onPress": [
                            {
                                "type": "SpeakItem",
                                "componentId": "speechText"
                            }
                        ],
                        "items": [
                            {
                                "type": "Container",
                                "direction": "row",
                                "items": [
                                    {
                                        "type": "Text",
                                        "speech": "${payload.sample.properties.text}",
                                        "id": "speechText",
                                        "text": "読み上げテスト",
                                        "fontSize": "10vw"
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "type": "Frame",
                        "item": [
                            {
                                "type": "TouchWrapper",
                                "onPress": [
                                    {
                                        "type": "SendEvent",
                                        "arguments": [
                                            "button"
                                        ]
                                    }
                                ],
                                "items": [
                                    {
                                        "type": "Text",
                                        "width": "30vw",
                                        "height": "20vh",
                                        "textAlign": "center",
                                        "textAlignVertical": "center",
                                        "text": "Button"
                                    }
                                ]
                            }
                        ],
                        "backgroundColor": "#006600",
                        "borderColor": "#00ff00",
                        "borderWidth": "4"
                    },
                    {
                        "type": "Pager",
                        "id": "pager01",
                        "width": "100%",
                        "items": [
                            {
                                "type": "Text",
                                "text": "ページ#1で表示されるテキストコンテンツ"
                            },
                            {
                                "type": "Text",
                                "text": "ページ#2で表示されるテキストコンテンツ"
                            }
                        ]
                    }
                ]
            }
        ]
    }
}